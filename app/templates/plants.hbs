<div class="moosi">
  <div class='header'>
    <a class='left' {{action 'openActionSheet'}}>menü</a>
    <h1 class="title">Pflanzen</h1>
    {{#link-to 'plants.create'}}neu{{/link-to}}
  </div>

  <div class='content list'>
    {{#if hasActiveOrder}}
      <div class="item active-order rows">
        <div {{bind-attr class=":row hasFrom:slim"}}>
          <span>
            {{#link-to 'order' activeOrder}}{{activeOrder.name}}{{/link-to}}
            <a href='#' {{action 'deselectActiveOrder'}} class="smaller">abbrechen</a>
          </span>

          <span class='flex'></span>
          <span class='smaller note'><em>wähl eine Pflanze</em></span>
        </div>
      </div>
    {{/if}}
    {{#each plant in filteredContent}}
      <div class="item" {{action 'linkToPlant' plant}}>
        <span>{{plant.name}}</span>
        <span class='flex'></span>
        <span class='col number relax'>{{euro plant.price}}</span>
        <span class='col number calm padding-left'>{{plant.youngPlantQuantity}}</span>
        <span class='col number padding-left peace'>{{plant.quantity}}</span>
      </div>
    {{/each}}
  </div>
  {{view 'tabs'}}
</div>
{{outlet}}

{{action-sheet isVisible=actionSheetVisible goToQuarters='goToQuarters' goToImport='goToImport'}}

