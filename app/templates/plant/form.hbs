<div class="item item-input">
  <label for="name" class='input-label'>Name</label>
  {{nohelp-input value=content.name}}
</div>

<div class="item item-input">
  <label for="preis" class='input-label'>Preis</label>
  {{input value=content.price placeholder='0.00' type='tel'}}
</div>

<div class="item divider">Bestände</div>

{{#each position in positions }}
  <div class="item item-input">
    <label for="preis" class='input-label'>{{position.quarter.name}}</label>
    {{input value=position.quantity placeholder='0' type='tel'}}
  </div>
{{/each}}

<div class="aright padding flexbox">
  {{#if deleteMode}}
    <button class="blue btn-desktop" {{action "leaveDeleteMode"}} title="save">abbrechen</button>
    <span class='flex'></span>
    <button class="warn btn-desktop smaller" {{action "deleteOrder"}} title="save">sicher löschen</button>
  {{else}}
    {{#if content.isNew}}{{else}}
      <button class="warn smaller" {{action "goIntoDeleteMode"}} {{bind-attr disabled=isNotDeletable }}>
        '{{content.name}}' löschen
        {{#if isNotDeletable}}
          <br><em class='smaller black visible'>vorher alles zurücklegen</em>
        {{/if}}
      </button>
      <span class='flex'></span>
    {{/if}}
    <button class="blue btn-desktop" {{action "save"}} title="save"> speichern </button>
  {{/if}}
</div>
