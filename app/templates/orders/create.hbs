{{#view 'upable' shouldShow=shouldShowCreate}}
  <div class='header'>
    <a class='left' href='#' {{action 'back' target='view'}}>back</a>
    <h2 class='title'>Neue Bestellung</h2>
    <a></a>
  </div>
  <div class='content list'>
    <div class="padding">
      <label for="name">Name</label>
      {{input value=content.name placeholder='Bestellung Nr. 3' }}
    </div>

    <div class="padding">
      <label for="preis">Kunde</label>
      {{input value=content.customer}}
    </div>

    <div class="padding">
      <label for="preis">Adresse</label>
      {{textarea value=content.adress rows=3 }}
    </div>


    <div class="padding aright">
      <button class="blue btn-desktop" {{action "save"}} title="save"> speichern </button>
    </div>
  </div>
