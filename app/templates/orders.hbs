<div class="moosi">
  <div class='header'>
    <a class='left'></a>
    <h1 class="title">Rechnungen</h1>
    {{#link-to 'orders.create'}}neu{{/link-to}}
  </div>

  <div class='content list'>
    {{#each order in arrangedContent}}
      <div class="item rows" {{action 'linkToOrder' order}}>
        <div class='row'>
          <span>{{order.name}}</span>
          <span class='padding-left note smaller'>
            {{order.customer}}
          </span>

          <span class='flex'></span>
          <span class='number calm'>{{euro order.totalPrice}}</span>
        </div>
      </div>
    {{/each}}
  </div>

  {{view 'tabs'}}
</div>
{{outlet}}
